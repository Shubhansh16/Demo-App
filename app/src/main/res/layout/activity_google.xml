<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GoogleActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textName"
        android:textSize="50sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/modern_era_black"
        android:text="Sparkle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/line"
        app:layout_constraintTop_toBottomOf="@id/textName"
        app:layout_constraintStart_toStartOf="@id/textName"
        app:layout_constraintEnd_toEndOf="@id/textName"
        android:text="Designed to ignite a spark."
        android:fontFamily="@font/modern_era_regular"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/terms"
        android:text="By signing up for Sparkle, you agree to our \nTerms of Service. Learn how we process \nYour data in our Privacy Policy."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/modern_era_regular"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:layout_marginTop="350dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/video"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/alexander"
        app:layout_constraintBottom_toTopOf="@id/terms"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="0dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        style="@style/viewFacebookSignUP"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/terms"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_google"
            style="@style/btn_facebook_style"
            android:drawableStart="@drawable/google"
            android:fontFamily="@font/modern_era_extra_bold"
            android:textColor="@color/white"
            android:text="Continue with Google" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/num"
        android:text="Or continue with Phone Number"
        app:layout_constraintTop_toBottomOf="@id/cardView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:fontFamily="@font/modern_era_bold"
        android:layout_marginTop="10dp"
        android:textSize="18sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>